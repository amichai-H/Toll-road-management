            <span class="navbar-toggler-bar navbar-kebab"></span>
          </button>
        </div>
      </nav>
      <!-- End Navbar -->
      <div class="panel-header panel-header-lg">
       <h1 style="color:whitesmoke; text-align: center; padding: 50px; margin: auto;"> <b>Toll-Road Dashboard</b></h1>
      </div>
      <div class="content">
        <div class="row">
          <div class="col-lg-4">
            <div class="card card-chart">
              <div class="card-body">
                <div id="piechart">
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-4 col-md-6">
            <div class="card card-chart">
              <div class="card-body">
                <div id="barchart">
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-4 col-md-6">
            <div class="card card-chart">
              <div class="card-body">
                <div id="columnchart">
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-8">
            <div class="card card-tasks">
              <div class="card-header ">
                <h4 class="card-title">Toll-Road RealTime Information</h4>
                <p class="card-title" style="font-size: medium;" id="CurrentDay">Current Day: Thursday</p>
                <p class="card-title" style="font-size: medium;" id="SpecialDay">SpecialDay: False</p>
                <h5 class="card-title" style="text-align: center;">Traffic Congestion Stats In Percentage</h5>
                <p class="card-title" style="font-size: medium;text-align: center;" id="TotalNum">Total Number Of Vehicles - <b>0</b></p>
              </div>
              <br><br>
              <div style="margin-left: 7%; margin-bottom: 12.5%;" id="gaugeChart"></div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card">
              <div class="card-header">
                <div class="row">
                  <div class="col-md-8">
                    <h4 class="card-title"> All Sections Traffic</h4>
                  </div>
                 <div class="col-md-4">
                    <button onClick="setViewType()" class="btn" style="text-align: right;"> <i class="fas fa-redo"></i></button>
                  </div>
                </div>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table" id="statsTable">
                    <thead class=" text-primary">
                      <th>
                        Section Number
                      </th>
                      <th>
                        More Details
                      </th>
                      <th class="text-right">
                        Number of Vehicles Currently
                      </th>
                    </thead>
                    <tbody>
                      <tr>
                        <td>
                          1
                        </td>
                        <td>
                          <button onClick="setViewType(1)" class="btn"> <i class="fas fa-hand-pointer"></i></button>
                        </td>
                        <td class="text-right carNumInSection">
                          0
                        </td>
                      </tr>
                      <tr>
                        <td>
                          2
                        </td>
                        <td>
                          <button onClick="setViewType(2)" class="btn"> <i class="fas fa-hand-pointer"></i></button>
                        </td>
                        <td class="text-right carNumInSection">
                          0
                        </td>
                      </tr>
                      <tr>
                        <td>
                          3
                        </td>
                        <td>
                          <button onClick="setViewType(3)" class="btn"> <i class="fas fa-hand-pointer"></i></button>
                        </td>
                        <td class="text-right carNumInSection">
                          0
                        </td>
                      </tr>
                      <tr>
                        <td>
                          4
                        </td>
                        <td>
                          <button onClick="setViewType(4)" class="btn"> <i class="fas fa-hand-pointer"></i></button>
                        </td>
                        <td class="text-right carNumInSection">
                          0
                        </td>
                      </tr>
                      <tr>
                        <td>
                          5
                        </td>
                        <td>
                          <button onClick="setViewType(5)" class="btn"> <i class="fas fa-hand-pointer"></i></button>
                        </td>
                        <td class="text-right carNumInSection">
                          0
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
